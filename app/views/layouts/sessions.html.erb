<!DOCTYPE html>
<html>
<head>
  <title>Tallertest</title>
  <% if mobile_device? %>
    <%= stylesheet_link_tag    "sessions.mobile" %>
  <% else %>	
    <%= stylesheet_link_tag    "application" %>
  <% end %>	
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "background.rotation.js" %>
  <%= csrf_meta_tags %>
</head>

<body>
	
<% if mobile_device? %>
	<%= yield %>
<% else %>	
	<div class=background
		background-list="<%= (1..4).map{|x| "/background/0#{x}.jpg"}.join(";") %>">
	</div>

	<div id=lastdiv>		
	  	<table>
	  	  <tr id=uppertr>
			<div id=uppertrdiv>
			</div>
	  	  </tr>
	  	  <tr id=centertr>
	  	  	<td id=lefttd>
	  	  		<div id=lefttddiv>
	  	  		</div>
	  	  	</td>
	  	  	<td class='icon_td white_background'>
			  <img class='icon_img' src='/images/valija.png'>
			  </img>	
			</td>
			<td class='white_background' id='center_cell'>  	
<%= yield %>

			</td>
	  	  	<td id=righttd>
	  	  		<div id=righttddiv>
	  	  		</div>
	  	  	</td>
		  </tr>
	  	  <tr id=lowertr>
			<div id=lowertrdiv>
			</div>
	  	  </tr>
		</table>
	</div>
<% end %>	
</body>
</html>
